{
  "description": "Ucai hooks - session context injection and iteration control",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'exec bash \"$(echo \"$0\" | tr \"\\\\\\\\\" \"/\")\"' '${CLAUDE_PLUGIN_ROOT}/hooks/handlers/session-start.sh'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'exec bash \"$(echo \"$0\" | tr \"\\\\\\\\\" \"/\")\"' '${CLAUDE_PLUGIN_ROOT}/hooks/handlers/stop-handler.sh'"
          }
        ]
      }
    ]
  }
}
